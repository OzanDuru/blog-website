@{
    Layout = null;
    ViewData["Title"] = "Giriş Yap";
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Yönetim Paneli</title>
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/custom.css" rel="stylesheet" />
    
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet">
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-primary">

    <div class="container">
        
        <div class="row justify-content-center align-items-center vh-100">
            <div class="col-xl-8 col-lg-12 col-md-6">
                <div class="card o-hidden border-0 shadow-lg">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-3 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Tekrar Hoş Geldiniz!</h1>
                                    </div>
                                    
                                    <form class="user" method="post" action="/Account/Login">
                                        <div class="mb-3">
                                            <label for="inputEmail" class="form-label visually-hidden">Email Adresi</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                                <input type="email" class="form-control form-control-user" id="inputEmail" placeholder="Email Adresiniz" name="email" required>
                                            </div>
                                        </div>
                                        <div class="mb-4">
                                            <label for="inputPassword" class="form-label visually-hidden">Şifre</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                                <input type="password" class="form-control form-control-user" id="inputPassword" placeholder="Şifreniz" name="password" required>
                                            </div>
                                        </div>
                                        <div class="d-grid">
                                            <button  type="submit" class="btn btn-primary btn-user">
                                                Giriş Yap
                                            </button>
                                            <a href="/Blogs/Index" class="btn btn-secondary btn-user ">Geri Dön</a>
                                         
        
                                        </div>
                                    </form>
                                    <hr>
                                    @* <div class="text-center">
                                        <a class="small" href="#">Şifremi Unuttum</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="/Admin/Register">Yeni Hesap Oluştur</a>
                                    </div> *@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    @* <script src="/js/sb-admin-2.min.js"></script> *@
    
    
</body>
</html>