@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<FileResource>

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Kaynaklarım</h1>
    <a href="/Admin/CreateFile" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Kaynak Ekle
    </a>
</div>

@if (Model.Count != 0)
{
    @foreach (var item in Model)
    {
        <div class="card shadow mb-4 border-left-info">
            <div class="card-header py-3 d-flex justify-content-between align-items-center bg-light">
                <div>
                    <h5 class="mb-2 font-weight-bold text-primary d-flex align-items-center">
    <i class="fas fa-book-open mr-2 text-info"></i>
    <span class="flex-grow-1">@item.Title</span>
    <span class="badge badge-pill badge-light border ml-2 px-2 py-1 shadow-sm " style="font-size:0.65em;">
        @item.UploadedAt.ToString("dd MMMM yyyy, HH:mm")
    </span>
</h5>

                    
                </div>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle text-secondary" href="#" role="button" id="dropdownMenuLink"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-600"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                         aria-labelledby="dropdownMenuLink">
                        <div class="dropdown-header">Aksiyonlar:</div>
                        <a class="dropdown-item text-danger" href="/Admin/DeleteResource?id=@item.Id">
                            <i class="fas fa-trash-alt"></i> Sil
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                 @{
                    string description = item.Description ?? "";
                    string truncatedDescription = description.Length > 180
                        ? description.Substring(0, 360) + "..."
                        : description;
                }
                <p class="text-dark" style="font-size: 16px;">
    <i class="fas fa-info-circle text-secondary"></i> @truncatedDescription
    @if (!string.IsNullOrWhiteSpace(item.ExternalLink))
    {
        <br />
        <a href="@item.ExternalLink" target="_blank" rel="noopener" class="d-inline-block mt-2">
            <i class="fas fa-external-link-alt"></i> Harici Kaynağa Git
        </a>
    }
</p>

            </div>
        </div>
    }
}
else
{
    <div class="card shadow mb-4 border-left-warning">
        <div class="card-body d-flex flex-column align-items-center justify-content-center py-5">
            <i class="fas fa-comment-slash fa-3x text-warning mb-3"></i>
            <h4 class="text-gray-700 mb-2">Henüz Kaynak bulunmuyor</h4>
            <p class="text-muted text-center">Paylaştığınız Kaynaklar burada listelenecektir.</p>
        </div>
    </div>
}
