@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<Blog>

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Bloglarım</h1>
    <a href="/Admin/CreateBlog" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Blog Oluştur
    </a>
</div>

@if (Model.Count != 0)
{
    @foreach (var item in Model)
    {
        <div class="card shadow mb-4 border-left-success">
            <div class="card-header py-3 d-flex justify-content-between align-items-center bg-light">
                <div>
                    <h5 class="m-0 font-weight-bold text-success">
                        <i class="fas fa-pen-nib"></i> @item.Name
                    </h5>
                </div>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle text-secondary" href="#" role="button" id="dropdownMenuLink"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-600"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                         aria-labelledby="dropdownMenuLink">
                        <div class="dropdown-header">Aksiyonlar:</div>
                        <a class="dropdown-item text-info" href="/Admin/EditBlog?id=@item.Id">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                        <a class="dropdown-item text-warning" href="/Admin/ToggleStatus?id=@item.Id">
                            <i class="fas fa-toggle-on"></i> Aç/Kapa
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item text-danger" href="/Admin/DeleteBlog?id=@item.Id">
                            <i class="fas fa-trash-alt"></i> Sil
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                @{
                    string description = item.Description ?? "";
                    string truncatedDescription = description.Length > 180
                        ? description.Substring(0, 180) + "..."
                        : description;
                }
                <p class="text-muted" style="font-size: 16px;">
                    <i class="fas fa-align-left text-secondary mr-1"></i> @truncatedDescription
                </p>
            </div>
        </div>
    }
}
else
{
    <div class="card shadow mb-4 border-left-warning">
        <div class="card-body d-flex flex-column align-items-center justify-content-center py-5">
            <i class="fas fa-blog fa-3x text-warning mb-3"></i>
            <h4 class="text-gray-700 mb-2">Henüz blog bulunmuyor</h4>
            <p class="text-muted mb-4">Yeni bir blog oluşturarak içerik paylaşmaya başlayabilirsiniz.</p>
            <a href="/Admin/CreateBlog" class="btn btn-success">
                <i class="fas fa-plus-circle mr-1"></i> Yeni Blog Oluştur
            </a>
        </div>
    </div>
}

