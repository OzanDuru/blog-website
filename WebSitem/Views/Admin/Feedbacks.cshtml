@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<Contact>

@foreach (var item in Model)
{
    <div class="card shadow mb-4 border-left-primary">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
            <div>
                <h5 class="mb-0">
                    <i class="fas fa-user"></i> @item.Name
                </h5>
                <small><i class="fas fa-envelope"></i> @item.Email</small><br />
                <small><i class="fas fa-calendar-alt"></i> @item.PublishDate.ToString("dd MMMM yyyy HH:mm")</small>
            </div>
        </div>
        <div class="card-body">
            <p class="text-dark" style="font-size: 16px;">
                <i class="fas fa-comment-dots text-secondary"></i> @item.Message
            </p>
        </div>
    </div>
}
