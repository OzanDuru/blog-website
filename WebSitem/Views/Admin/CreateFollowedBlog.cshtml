@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model WebSitem.Models.FollowedBlog   

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Takip Edilen Blog Ekle</h1>
</div>

<!-- Yeni Blog Formu -->
<form action="/Admin/CreateFollowedBlog" method="post" id="createFollowedBlogForm">
    @Html.AntiForgeryToken()  <!-- CSRF koruması -->

    <!-- Blog Adı -->
    <div class="form-group">
        <input type="text"
               name="Name"
               class="form-control form-control-user"
               placeholder="Blog adı (ör. MyDevBlog)"
               required />
    </div>

    <!-- Blog URL -->
    <div class="form-group">
        <input type="url"
               name="Url"
               class="form-control form-control-user"
               placeholder="Tam URL (ör. https://mydevblog.com)"
               required />
    </div>

    <!-- Kaydet Butonu -->
    <div class="d-flex my-2">
        <button class="btn btn-success btn-icon-split">
            <span class="icon text-white-50"><i class="fas fa-check"></i></span>
            <span class="text">Kaydet</span>
        </button>
    </div>

    @if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
</form>
